        "@hapi/joi": "^17.1.0",
        "babel-eslint": "^10.0.3",
        "bcrypt": "^3.0.7",
        "cors": "^2.8.5",
        "debug": "^4.1.1",
        "dotenv": "^8.2.0",
        "eslint-config-airbnb": "^18.0.1",
